@model IEnumerable<Proba3.Models.Manufacturer>
@{
    ViewData["Title"] = "All";
}

<div class="row" id="mainsection">
    <div id="sidebar" class="container"></div>
    <div id="mainbar" class="container">
        @foreach(var item in Model)
        {
            @Html.DisplayFor(modelItem => item.Title)
        }

        <form class="siteform" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <select class="form-control">
                    <option value="">-- Select Department --</option>

                    @foreach (var item in Model)
                    {
                        <option value="@Html.DisplayFor(modelitem => item.Id)"> @Html.DisplayFor(modelitem => item.Title)</option>
                    }
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>